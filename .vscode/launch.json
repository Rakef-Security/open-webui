{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Open WebUI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "open_webui.main:app",
                "--port",
                "8080",
                "--host",
                "localhost",
                "--forwarded-allow-ips",
                "*",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.vscode/.env",
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}
